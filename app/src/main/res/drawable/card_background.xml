<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- אפקט צל (שקיפות 10%) -->
            <corners android:radius="16dp" /> <!-- גבולות מעוגלים -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item android:top="4dp" android:left="4dp"> <!-- מרחק הצל מהרקע -->
        <shape android:shape="rectangle">
            <solid android:color="#2B2B2B" /> <!-- צבע רקע כהה -->
            <corners android:radius="16dp" /> <!-- גבולות מעוגלים -->
            <stroke
                android:width="1dp"
                android:color="#444444" /> <!-- גבול דק -->
        </shape>
    </item>
</layer-list>
