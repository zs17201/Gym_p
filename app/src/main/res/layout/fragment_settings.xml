<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="24dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âš™ Settings"
        android:textSize="36sp"
        android:textColor="@color/primary_color"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:letterSpacing="0.5"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_card_background"
        android:padding="18dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile Icon"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile Settings"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/IBProfileSettings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Arrow Icon"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_card_background"
        android:padding="18dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="Notifications Icon"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Manage Workouts"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/ImButtonCalendar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Arrow Icon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_card_background"
        android:padding="18dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_goal_tracking"
            android:contentDescription="Workout Goals Icon"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show your favorite workouts"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/ButtonDisplayFavorites"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Arrow Icon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_card_background"
        android:padding="18dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="6dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile Icon"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search Gym"
            android:textColor="@color/primary_color"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageButton
            android:id="@+id/IBSearchGym"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Arrow Icon"
            />
    </LinearLayout>

</LinearLayout>
