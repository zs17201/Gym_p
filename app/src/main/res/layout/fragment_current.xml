<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:orientation="vertical">

    <!-- Header Section with Padding and Styling -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2D2D"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Workout Title -->
        <TextView
            android:id="@+id/workoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week 1 Day 3 - Wednesday"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            android:layout_weight="1" />

        <!-- Favorite Icon (Heart) -->
        <ImageButton
            android:id="@+id/favoriteIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_like"
            android:contentDescription="Favorite"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:clickable="true" />

        <!-- Restore Workout Icon -->
        <ImageButton
            android:id="@+id/restoreWorkoutIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_favlist"
            android:background="@android:color/transparent"
            android:contentDescription="Restore Workout"
            android:scaleType="fitCenter"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- RecyclerView for Workout List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/workoutRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="16dp" />
</LinearLayout>
